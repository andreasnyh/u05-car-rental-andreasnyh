{% block addCar %}

    <!doctype html>
    <html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport"
              content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
        <meta http-equiv="X-UA-Compatible" content="ie=edge">
        <link rel="stylesheet" type="text/css" href="{{ baseUrl }}/css/style.css"/>
        <link rel="icon" href="{{ baseUrl }}/favicon.ico">
        <title>Add Car</title>
    </head>

    <body>

        <h1>Add Car</h1>

        <form method="post" action="/carAdded">
            <table border="1px">
                <tr>
                    <td>Registration:</td>
                    <td><input title="Registration" type="text" name="registration" minlength="6" maxlength="6" required></td>
                </tr>
                <tr>
                    <td>Manufacture year:</td>
                    <td><input title="Manufacture year" type="text" name="year" required></td>
                </tr>
                <tr>
                    <td>Cost per Day:</td>
                    <td><input title="Daily rent cost" type="text" name="cost" required></td>
                </tr>
                <tr>
                    <td>Make:</td>
                    <td>
                        <select title="make" name="make" type="text" required  style="width: 100%">
                            <option value="" disabled selected hidden>-- Select a Make --</option>
                            {% for makes in make %}
                                <option value="{{ makes.make }}">{{ makes.make }}</option>
                            {% endfor %}
                        </select>
                    </td>
                </tr>

                <tr>
                    <td>Model:</td>
                    <td><input title="model" type="text" name="model" required></td>
                </tr>
                <tr>
                    <td>Color:</td>
                    <td>
                        <select title="color" name="color" type="text" required style="width: 100%">
                            <option value="" disabled selected hidden>-- Select a Color --</option>
                            {% for colors in color %}
                                <option value="{{ colors.color }}">{{ colors.color }}</option>
                            {% endfor %}
                        </select>
                    </td>
                </tr>

            </table>
            <input type="submit" name="submitCar" value="Add Car">

        </form>

        <form method="post" action="/cars">
            <input type="submit" name="Cancel" value="Cancel">
        </form>

    </body>
    <script type="text/javascript" src="{{ baseUrl }}/script.js"></script>
</html>
{% endblock %}