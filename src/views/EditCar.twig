{% block editCar %}

    <!doctype html>
    <html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport"
              content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
        <meta http-equiv="X-UA-Compatible" content="ie=edge">
        <link rel="stylesheet" type="text/css" href="../../../../../../../../css/style.css" />
        <title>Car rental Edit Car</title>
    </head>
    <body>

    <h1>Edit Car</h1>

    <form method="post" action="/carEdited/{{ registration }}/{{ year }}/{{ cost }}/{{ make }}/{{ model }}/{{ color }}/{{ renter }}"
          onsubmit="return confirm('Are these changes to {{ registration }} {{ make }} correct?')">
        <table>
            <tr>
                <td>Registration:</td>
                <td><input type="text" name="registration" value="{{ registration }}" placeholder="{{ registration }}"  DISABLED>
                </td>
            </tr>
            <tr>
                <td>Manufacture Year:</td>
                <td><input type="text" name="year" value="{{ year }}"></td>
            </tr>
            <tr>
                <td>Cost per Day</td>
                <td><input type="text" name="cost" value="{{ cost }}"></td>
            </tr>
            <tr>
                <td>Make:</td>
                <td>
                    <select name="make" type="text" required  style="width: 100%">
                        <option value="{{ make }}" disabled selected hidden>{{ make }}</option>
                        {% for makes in makesList %}
                            <option value="{{ makes.make }}">{{ makes.make }}</option>
                        {% endfor %}
                    </select>
                </td>
            </tr>
            <tr>
                <td>Model:</td>
                <td><input type="text" name="model" value="{{ model }}" required></td>
            </tr>
            <tr>
                <td>Color:</td>
                <td>
                    <select name="color" type="text" required style="width: 100%">
                        <option value="{{ color }}" disabled selected hidden>{{ color }}</option>
                        {% for colors in colorsList %}
                            <option value="{{ colors.color }}">{{ colors.color }}</option>
                        {% endfor %}
                    </select>
                </td>
            </tr>

        </table>

        <input type="submit" name="submitCar" value="Confirm Edit">
    </form>


    <form method="post" action="/cars">
        <input type="submit" name="Cancel" value="Cancel">
    </form>

    </body>
    <script type="text/javascript" src="../../../../../../../../../script.js"></script>
    </html>
{% endblock %}