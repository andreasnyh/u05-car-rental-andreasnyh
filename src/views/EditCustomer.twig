{% block editCustomers %}

    <!doctype html>
    <html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
        <meta http-equiv="X-UA-Compatible" content="ie=edge">
        <link rel="stylesheet" type="text/css" href="{{ baseUrl }}/css/style.css" />
        <link rel="icon" href="{{ baseUrl }}/favicon.ico">
        <title>Edit Customer</title>
    </head>
    <body>

    <h1>Edit Customer</h1>
    <table border="1px">
        <form method="post" action="/customerEdited/{{ socialSecurityNumber }}/{{customerName|raw}}/{{address}}/{{postalAddress}}/{{phoneNumber}}"
            onsubmit="return confirm('Are these changes to {{ customerName }} correct?')">

            <tr>
                <td>Social Security Number:</td>
                <td><input type="text" name="socialSecurityNumber" value="{{ socialSecurityNumber }}" placeholder="{{ socialSecurityNumber }}"  DISABLED>
                </td>
            </tr>
            <tr>
                <td>Name:</td>
                <td><input type="text" name="customerName" value="{{ customerName|raw }}"></td>
            </tr>
            <tr>
                <td>Address:</td>
                <td><input type="text" name="address" value="{{ address }}"></td>
            </tr>
            <tr>
                <td>Postal Address:</td>
                <td><input type="text" name="postalAddress" value="{{ postalAddress }}"></td>
            </tr>
            <tr>
                <td>Phone Number:</td>
                <td><input type="text" name="phoneNumber" minlength="10" maxlength="10" value="{{ phoneNumber }}"></td>
            </tr>

            <tr><td colspan="2">
                    <input type="submit" name="submitCustomer" value="Confirm Edit">
            </td></tr>
        </form>
            <tr><td colspan="2">
                <form method="post" action="/customers">
                    <input type="submit" name="Cancel" value="Cancel">
                </form>
            </td></tr>
        </table>





    </body>
    <script type="text/javascript" src="{{ baseUrl }}/script.js"></script>
    </html>
{% endblock %}