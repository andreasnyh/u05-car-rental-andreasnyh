{% block editCustomers %}

    <!doctype html>
    <html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport"
              content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
        <meta http-equiv="X-UA-Compatible" content="ie=edge">
        <link rel="stylesheet" type="text/css" href="../../css/style.css" />
        <title>Car rental Edit Customer</title>
    </head>
    <body>

    <h1>Edit Customer</h1>

    <form method="post" action="/customerEdited/{{ socialSecurityNumber }}/{{customerName|raw}}/{{address}}/{{postalAddress}}/{{phoneNumber}}"
          onsubmit="return confirm('Are these changes to {{ customerName }} correct?')">
        <table>
            <tr>
                <td>SSN:</td>
                <td><input type="text" name="socialSecurityNumber" placeholder="{{ socialSecurityNumber }}"  DISABLED>
                </td>
            </tr>
            <tr>
                <td>Name:</td>
                <td><input type="text" name="customerName" value="{{ customerName|raw }}"></td>
            </tr>
            <tr>
                <td>Address:</td>
                <td><input type="text" name="address" value="{{ address }}"></td>
            </tr>
            <tr>
                <td>Postal Address:</td>
                <td><input type="text" name="postalAddress" value="{{ postalAddress }}"></td>
            </tr>
            <tr>
                <td>Phone Number:</td>
                <td><input type="text" name="phoneNumber" minlength="10" maxlength="10" value="{{ phoneNumber }}"></td>
            </tr>

        </table>

        <input type="submit" name="OK" value="Confirm Edit">
    </form>


    <form method="post" action="/customers">
        <input type="submit" name="Cancel" value="Cancel">
    </form>

    </body>
    </html>
{% endblock %}